{
  "manifest_version": 3,
  "name": "zapi",
  "description": "Zapi is a lightweight Chrome extension that lets you send API requests instantly from a popup interface.",
  "version": "0.1.0",
  "icons": {
    "32": "icons/icon32.png"
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Toggle zapi",
    "default_icon": {
      "32": "icons/icon32.png"
    }
  },
  "host_permissions": ["<all_urls>"]
}
